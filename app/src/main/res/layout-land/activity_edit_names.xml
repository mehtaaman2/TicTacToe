<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.aman_mehta.tictactoe.Edit_names"
    android:orientation="vertical"
    android:background="@drawable/bg1"

    android:weightSum="100">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="80">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Single Player"
                    android:textSize="30dp"
                    android:textColor="#ff1c713e"
                    android:textStyle="bold|italic" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Player : "
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#ff484571" />
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sppn"
                        android:textSize="20dp"
                        android:hint="Player Name"
                        android:textColor="#ffff3300" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/mp"
                android:layout_below="@id/sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Multi Player"
                    android:textSize="30dp"
                    android:textColor="#ff1c713e"
                    android:textStyle="bold|italic" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Player 1 : "
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#ff484571" />
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spp1n"
                        android:textSize="20dp"
                        android:hint="Player 1 Name"
                        android:textColor="#ffff3300" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Player 2 : "
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#ff484571" />
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spp2n"
                        android:textSize="20dp"
                        android:hint="Player 2 Name"
                        android:textColor="#ffff3300" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Names"
        android:id="@+id/btn_reset_names"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:background="@drawable/shape"
        android:textColor="#f165056f"
        android:textStyle="bold|italic" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:weightSum="100"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_save"
            android:layout_weight="50"
            android:text="Save"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:background="@drawable/shape"
            android:textColor="#f165056f"
            android:textStyle="bold|italic" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_cancel"
            android:layout_weight="50"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:background="@drawable/shape"
            android:textColor="#f165056f"
            android:textStyle="bold|italic" />
    </LinearLayout>


</LinearLayout>
