<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/llayout"
    android:weightSum="100"
    android:orientation="vertical"
    tools:context="com.example.aman_mehta.tictactoe.Stats"
    android:background="@drawable/bg1"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:weightSum="100"
       android:layout_weight="80"
        android:orientation="horizontal"
        android:id="@+id/score_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sp_data"
        android:layout_weight="50"
        android:weightSum="100"
        android:orientation="vertical"
        android:background="@drawable/border_land">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sp"
            android:layout_weight="20"
            android:textAllCaps="false"
            android:textSize="30dp"
            android:text="SINGLE PLAYER STATS"
            android:textColor="#ff7a2008"
            android:textStyle="bold" />
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_score"
        android:layout_weight="80"
        android:textAllCaps="false"
        android:textSize="20dp"
            android:text="SINGLE PLAYER"
            android:textColor="#ff364620"
            android:textStyle="bold|italic" />
        </ScrollView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/mp_data"
        android:layout_weight="50"
        android:weightSum="100"
        android:orientation="vertical"
        android:background="@drawable/border_land">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mp"
            android:layout_weight="20"
            android:textAllCaps="false"
            android:textSize="30dp"
            android:text="MULTI PLAYER STATS "
            android:textColor="#ff7a2008"
            android:textStyle="bold" />
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mp_score"
            android:layout_weight="80"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:text="SINGLE PLAYER"
            android:textColor="#ff364620"
            android:textStyle="bold|italic" />
        </ScrollView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="20"
        android:weightSum="100"
        android:layout_gravity="bottom"
        android:id="@+id/btn_layout">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_reset"
        android:text="Reset Scores"
        android:textAllCaps="false"
        android:layout_weight="50"
        android:layout_gravity="bottom"
        android:background="@drawable/shape"
        android:textColor="#f165056f"
        android:textSize="20dp"
        android:textStyle="bold|italic" />
    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/btn_edit"
    android:text="Change Player Names"
    android:textAllCaps="false"
    android:layout_weight="50"
        android:layout_gravity="bottom"
        android:background="@drawable/shape"
        android:textColor="#f165056f"
        android:textSize="20dp"
        android:textStyle="bold|italic" />
    </LinearLayout>
</LinearLayout>
